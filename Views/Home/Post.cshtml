@model Post

@{

}

<div class="container">
    <div class="post no-shadow">
        @if (!String.IsNullOrEmpty(Model.Image))
        {
            var image_path = $"/Image/{Model.Image}";
            <img src="@image_path" width="500" />
        }
        <span class="postTitle">@Model.Title</span>
    </div>
    <div class="postBody">
        @Html.Raw(Model.Body)
    </div>
</div>
